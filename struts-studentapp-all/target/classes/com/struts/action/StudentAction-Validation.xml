<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredString">
            <message key="err.name">You must enter a name.</message>
        </field-validator>
    </field>
    <field name="student.age">
    	<field-validator type="int">
    		<param name="min">20</param>
    		<param name="max">70</param>
    		<message>Age should be between 20 and 70</message>
    	</field-validator>
     </field>
     <field name="student.email">
     	<field-validator type="requiredstring">
     	<message>email is required</message>
     	</field-validator>
     </field>
     
     <field name="student.email">
     	<field-validator type="requiredstring">
     	<message>email is not valid</message>
     	</field-validator>
     </field>
     <field name="student.stipend">
     	<field-validator type="double">
     	<param name="minInclusive">500</param>
     	<message>stipend should be greater than 500</message>
     	</field-validator>
     </field>
     <field name="student.course">
     	<field-validator type="requiredstring">
     	<message>select course</message>
     	</field-validator>
     	</field>
     	<field name="student.gender">
     	<field-validator type="requiredstring">
     	<message>select gender</message>
     	</field-validator>
     	</field>
     	<field name="student.city">
     	<field-validator type="requiredstring">
     	<message>select city</message>
     	</field-validator>
     	</field>
     	<field name="student.hobby">
     	<field-validator type="requiredstring">
     	<message>hobby is required</message>
     	</field-validator>
     	</field>
</validators>